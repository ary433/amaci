{
  "manifest_version": 3,
  "name": "Amaci Key Manager",
  "version": "1.0",
  "description": "A secure key management tool for Amaci (Anonymous Minimal Anti-Collusion Infrastructure)",
  "permissions": [
    "storage",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/icons/icon.svg"
  },
  "icons": {
    "128": "assets/icons/icon.svg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
